<div class="upload_file" id="upload_file_<%= image.id %>">
  <%= link_to image_tag(image.image_url(:thumb)), "javascript:popLink();" %>
  <div class="actions">
    <%= link_to "x", image, :confirm => '确定吗?', :method => :delete, :class => 'btn btn-mini btn-danger', :remote => true %>
  </div>
  <input type="text" value="[img]<%= image.image_url %>[/img]">
</div>

<script type="text/javascript">
function popLink() {
  alert("可拷贝输入框中的图片地址复制到文本中的任意部分显示。");
}
</script>