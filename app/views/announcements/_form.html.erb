<%= simple_form_for @announcement, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :message, :label => "内容", :input_html => {:class => "span6", :rows => "8"} %>
  <%= f.input :starts_at, :as => :date, :label => "起始时间" %>
  <%= f.input :ends_at, :as => :date, :label => "结束时间" %>
  <div class="form-actions">
    <%= f.submit "提交", :class => 'btn btn-primary' %>
  </div>
<% end %>