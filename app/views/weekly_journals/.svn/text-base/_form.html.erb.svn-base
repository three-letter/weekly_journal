<%= simple_form_for @weekly_journal do |f| %>
  <div class="control-group">
    <div class="span6">
       <%= f.input :title, :input_html => {:class => "span7"}, :label => "标题" %>
         <label class="string required control-label">图片</label>
         <div class="controls">
            <a href="#Modal_image_for_journal" role="button" class="btn btn-mini" data-toggle="modal">上传</a>
         </div>
         <div class="controls">
           <%= geditor_buttons %>
         </div>
         <%= f.input :content, :label => "内容", :input_html => {:class => "span7", :rows => "18", :id => "geditor"} %>       
       <div class="controls"><%= hidden_field_tag :week, params[:week] %>
       <%= f.submit "提交", :class => 'btn btn-primary' %>
     </div>
    </div>
  </div>
<% end %>

<div id="Modal_image_for_journal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">图片上传</h3>
  </div>
  <div class="control-group" id="image_for_journal">
    <% @upload_files = [] %>
    <%= render "/upload_files/images" %>
    <div id="upload_files"></div>
    <br><br>
    <script id="template-upload" type="text/x-tmpl">
    <div class="upload"></div>
    </script>
  </div>
</div>