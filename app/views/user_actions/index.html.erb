<% content_for :title, "功能管理" %>
<%= button_to "重新加载", refresh_user_actions_path %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>功能名称</th> 
      <th>路由</th>
      <th>是否默认可访问功能</th>
      <th>是否加入权限管理</th>
    </tr>
  </thead>
  <tbody>
    <% @user_actions.each do |user_action| %>
    <% style_class = get_user_action_class(user_action) %>
      <tr class="<%=style_class%>">
        <td><%= best_in_place user_action, :name %></td>
        <td><%= best_in_place user_action, :action_name %></td>
        <td><%= best_in_place user_action, :as_default, :type => :checkbox , :collection => ["否", "是"] %></td>
        <td><%= best_in_place user_action, :as_available, :type => :checkbox, :collection => ["否", "是"] %></td>
        <td><%= link_to "X", user_action_path(user_action), :method => :delete, :data => { :confirm => "确定吗？" }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

